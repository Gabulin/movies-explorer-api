{
  "env": {
    "es2021": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": ["error", { "allow": ["info"] }],
    "no-warning-comments": ["error", { "terms": ["todo"], "location": "anywhere" }],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  }
}